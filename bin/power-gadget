#!/bin/bash

if [ $# -eq 0 ] ; then
    interval=1000
elif [ $# -gt 1 ] ; then 
    echo "Usage: $(basename $0) [interval]"
    exit 1
else
    case $1 in
        ''|*[!0-9]*)
            echo "Usage: $(basename $0) [interval]"
            exit 1
            ;;
        *)
            interval=$((1000*$1))
            ;;
    esac
fi

# Intel
# powermetrics -i $interval | grep --color -i "fan\|temperature\|package power\|system average frequency"

# Apple Silicon
powermetrics -i $interval --samplers cpu_power,gpu_power | grep -v residency
